{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://api.steampowered.com/"
        },
        {
          "url": "https://cdn.fastly.steamstatic.com/"
        },
        {
          "url": "https://avatars.fastly.steamstatic.com/"
        },
        {
          "url": "https://steamcommunity.com/"
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:allow-appcache-write-recursive",
      "allow": [{"path": "$APPCACHE/*"},{"path": "$APPCONFIG/*"},{"path": "$APPLOCALDATA/*"}]
    },
    "dialog:default"
  ]
}