{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "manifold",
  "version": "0.1.0",
  "identifier": "com.navivani.manifold",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Manifold",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": {
        "default-src": "http://localhost:1420"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["./scripts/"]
  }
}
